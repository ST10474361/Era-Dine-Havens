<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEE6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="50sp"
            android:layout_height="50dp"
            android:layout_marginStart="352dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/hello_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="Foodie"
                android:textColor="#5CA803"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>



        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/search"
            android:inputType="text" />



        <View
            android:layout_width="wrap_content"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="0dp"
            android:paddingStart="5dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:id="@+id/coupon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/Voucher"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/voucher"
                    android:scaleType="fitCenter"
                    android:background="@color/black"
                    android:contentDescription="Voucher"/>

                <ImageButton
                    android:id="@+id/Coupon"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/coupon"
                    android:scaleType="fitCenter"
                    android:background="#8BC34A"
                    android:layout_marginStart="20dp"
                    android:contentDescription="Coupon" />

                <ImageButton
                    android:id="@+id/Special"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/special"
                    android:scaleType="fitCenter"
                    android:background="@color/black"
                    android:layout_marginStart="20dp"
                    android:contentDescription="Special" />


            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:paddingStart="5dp"
            android:text="Menu"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/waf"/>
       <Button
           android:id="@+id/break_btn"
           android:layout_width="320dp"
           android:layout_height="50dp"
           android:layout_marginHorizontal="10dp"
           android:text="Breakfast 07:00am-10:59am"
           android:textStyle="italic"
           android:textAlignment="center"
           android:textColor="@color/white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/brunch3"/>
        <Button
            android:id="@+id/brk_btn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Brunch 11:00am-13:59pm"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/lunch"/>
        <Button
            android:id="@+id/lunch_btn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Lunch 14:00pm-17:59am"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/snack"/>
        <Button
            android:id="@+id/snack_btn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Snacks"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/main4"/>
        <Button
            android:id="@+id/dinner_btn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Dinner"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/drink4"/>
        <Button
            android:id="@+id/drink_btn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Drinks"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>